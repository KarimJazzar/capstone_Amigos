<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chatUserRV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/link_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/card_ripple"
        app:cardCornerRadius="23dp"
        android:elevation="30dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:paddingHorizontal="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tripRideType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/brown"
                android:textAllCaps="true"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="17sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/tripRideDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat"
                android:text="TextView" />

            <TextView
                android:id="@+id/tripRideDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat"
                android:text="TextView" />

            <TextView
                android:id="@+id/tripRideMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_gravity="right"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/brown"
                android:text="More detail" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>